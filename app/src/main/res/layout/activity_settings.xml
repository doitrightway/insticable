<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ankit.insticable.settings"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/logo3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:textSize="30sp"
                    android:id="@+id/settingname"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update your hostel"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textSize="20sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addhostel"
                android:hint="1-16"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update your Department"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textSize="20sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/adddepartment"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update your info"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Co-ordinator"
                android:textSize="15sp"
                android:id="@+id/addcordi"
                android:onClick="addcordi"
                android:textAlignment="center"
                android:textColor="@android:color/black"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student"
                android:textSize="15sp"
                android:textAlignment="center"
                android:id="@+id/addstu"
                android:onClick="addstu"
                android:textColor="@android:color/black"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update your interests"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textSize="20sp"/>

                <CheckBox
                    android:id="@+id/cricket"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Cricket"
                    android:onClick="addcricket"/>

                <CheckBox
                    android:id="@+id/football"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="FootBall"
                    android:onClick="addfootball"/>

                <CheckBox
                    android:id="@+id/tennis"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Tennis"
                    android:onClick="addtennis"/>

                <CheckBox
                    android:id="@+id/squash"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Squash"
                    android:onClick="addsquash"/>

                <CheckBox
                    android:id="@+id/swimming"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Swimming"
                    android:onClick="addswimming"/>

                <CheckBox
                    android:id="@+id/carrom"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Carrom"
                    android:onClick="addcarrom"/>

                <CheckBox
                    android:id="@+id/chess"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Chess"
                    android:onClick="addchess"/>

                <CheckBox
                    android:id="@+id/music"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Music"
                    android:onClick="addmusic"/>

            </LinearLayout>
            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Done"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:layout_alignParentBottom="true"
                android:onClick="done"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
