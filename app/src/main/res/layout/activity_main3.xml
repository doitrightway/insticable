<?xml version="1.0" encoding="utf-8"?>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Choose your interests"
                                android:textAlignment="center"
                                android:layout_marginTop="20dp"
                                android:textSize="30sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/logo3">
                                <CheckBox
                                    android:id="@+id/checkBox11"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:text="Cricket"
                                    android:onClick="cricket"/>

                                <CheckBox
                                    android:id="@+id/checkBox12"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:text="FootBall"
                                    android:onClick="football"/>

                                <CheckBox
                                    android:id="@+id/checkBox13"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:text="Tennis"
                                    android:onClick="tennis"/>

                                <CheckBox
                                    android:id="@+id/checkBox14"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:text="Squash"
                                    android:onClick="squash"/>

                                <CheckBox
                                    android:id="@+id/checkBox15"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:text="Swimming"
                                    android:onClick="swimming"/>

                                <CheckBox
                                    android:id="@+id/checkBox17"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:text="Carrom"
                                    android:onClick="carrom"/>

                                <CheckBox
                                    android:id="@+id/checkBox18"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:text="Chess"
                                    android:onClick="chess"/>

                                <CheckBox
                                    android:id="@+id/checkBox19"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:text="Music"
                                    android:onClick="music"/>

                        </LinearLayout>
                            <Button
                                android:id="@+id/button4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Go!"
                                android:textColor="@android:color/white"
                                android:background="@color/colorPrimary"
                                android:onClick="enjoy"/>
                    </LinearLayout>
                </ScrollView>


</LinearLayout>